<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_input_old_dec"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="岁数"
        android:textColor="#333"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_old"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:hint="岁数"
        android:textColor="#666"
        android:textColorHint="#999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_old_dec" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_input_birthday_dec"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="生日"
        android:textColor="#333"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_input_old" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_year"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:hint="年"
        android:textColor="#666"
        android:textColorHint="#999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_birthday_dec" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_month"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:hint="月"
        android:textColor="#666"
        android:textColorHint="#999"
        app:layout_constraintLeft_toRightOf="@+id/et_input_year"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_birthday_dec" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_day"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:hint="日"
        android:textColor="#666"
        android:textColorHint="#999"
        app:layout_constraintLeft_toRightOf="@+id/et_input_month"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_birthday_dec" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#f24444"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>